<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daivansh.jobreferer.activities.RegistrationActivity"
    android:background="@drawable/bg_port">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite_low">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1"
                android:background="@color/colorAccent"
                android:layout_marginBottom="10dp"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/imageView4"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:elevation="6dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="0dp">

                <TextView
                    android:text="SIGN UP HERE"
                    android:textSize="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/app_drawer_email"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">

                <EditText
                    android:text=""
                    android:hint="First name"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editTextfname"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:singleLine="true"
                    android:inputType="textCapWords|textPersonName" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">

                <EditText
                    android:text=""
                    android:hint="Last name"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:layout_height="match_parent"
                    android:id="@+id/editTextlname"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:singleLine="true"
                    android:inputType="textCapWords|textPersonName" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">
                <EditText
                    android:text=""
                    android:hint="Contact No."
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextcontact"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:singleLine="true"
                    android:inputType="phone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">
                <EditText
                    android:text=""
                    android:hint="Email-Id"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextemail"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:singleLine="true"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/radioButtonmale"
                    android:id="@+id/rbgroup"
                    android:gravity="center"
                    android:weightSum="2">

                    <RadioButton
                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonmale"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp" />

                    <RadioButton
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonfemale"
                        android:layout_weight="1" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">

                <EditText
                    android:text=""
                    android:hint="Password"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextpwd"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">

                <EditText
                    android:text=""
                    android:hint="Confirm Password"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextconfpwd"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="1">
                <Button
                    android:text="Register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonregister"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.41"
                    android:gravity="center"
                    android:layout_gravity="center"
                    style="@style/AppTheme.Button"
                    android:layout_margin="25dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="1">
                <TextView
                    android:text="Dont want to signup?"
                    android:layout_width="226dp"
                    android:textSize="17dp"
                    android:layout_height="match_parent"

                    android:layout_alignParentBottom="false"
                    android:layout_alignStart="@+id/textView3"
                    android:gravity="right"
                    android:paddingEnd="5dp"

                    android:id="@+id/textView4"/>

                <TextView
                    android:text="Login Here"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="login"

                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_toEndOf="@+id/textView4"
                    android:gravity="left"
                    android:paddingBottom="20dp"
                    android:id="@+id/textViewlogin"
                    android:textSize="17dp"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>