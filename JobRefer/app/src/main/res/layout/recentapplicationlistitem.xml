<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/relative_job">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:id="@+id/card_job"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/cardView"
            android:layout_alignStart="@+id/cardView">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:weightSum="3"
                android:background="@color/colorAccent"
                android:elevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_action_job"
                    android:id="@+id/imageView2"
                    android:layout_weight="1.2"
                    android:padding="15dp" />

                <TextView
                    android:text="Job Title"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat"
                    android:textSize="18dp"
                    android:layout_weight="0.75"
                    android:id="@+id/textViewapplicationjobtitle"
                    android:layout_below="@+id/textViewapplicationjobdate"
                    android:layout_alignParentStart="true"
                    android:layout_margin="0dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textStyle="normal|bold"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:text="Date Posted"
                    android:textSize="15dp"
                    android:layout_weight="1.05"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewapplicationjobdate"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="0dp"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/cardview_shadow_start_color" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:text="Salary"
                android:layout_width="match_parent"
                android:textSize="17dp"
                android:layout_weight="1"
                android:id="@+id/textViewapplicationjobsalary"
                android:layout_below="@+id/textViewapplicationjobtitle"
                android:layout_alignStart="@+id/textViewapplicationjobtitle"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

            <TextView
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="17dp"
                android:layout_below="@+id/textViewApplicantEmail"
                android:layout_alignStart="@+id/textViewApplicantEmail"
                android:id="@+id/textViewapplicationjoblocation"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_action_location" />
</LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>







</RelativeLayout>