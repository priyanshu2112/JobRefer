<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:id="@+id/card_applicant"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_action_profile"
                android:id="@+id/imageView2"
                android:padding="10dp"
                android:layout_weight="3" />
            <TextView
                android:text="Applicant Name"
                android:layout_width="match_parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:layout_height="63dp"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_applicantname"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:layout_weight="1" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/view_email">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_action_email"
                    android:id="@+id/imagevmail"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_weight="3" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Email-id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tv_applicantmail"
                        android:layout_below="@+id/textViewapplicationjobtitle"
                        android:layout_alignStart="@+id/textViewapplicationjobtitle"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/colorBlack" />

                    <View
                        android:layout_width="match_parent"
                        android:background="@android:color/darker_gray"
                        android:layout_height="1dp"
                        android:layout_marginEnd="20dp" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/view_call">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_action_call"
                    android:id="@+id/imagevphone"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_weight="3" />

                <TextView
                    android:text="Contact No"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_below="@+id/textViewApplicantEmail"
                    android:layout_alignStart="@+id/textViewApplicantEmail"
                    android:id="@+id/tv_applicantcontact"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>